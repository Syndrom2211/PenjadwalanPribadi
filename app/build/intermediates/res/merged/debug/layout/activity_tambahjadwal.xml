<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Waktu"
        android:id="@+id/textView8"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/waktu_jadwal"
        android:hint="ex. 09.00-10.00"
        android:layout_alignTop="@+id/textView8"
        android:layout_toLeftOf="@+id/submit_jadwal"
        android:layout_toStartOf="@+id/submit_jadwal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Hari"
        android:id="@+id/textView7"
        android:layout_below="@+id/tahun_jadwal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bulan"
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/bulan_jadwal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hari_jadwal"
        android:hint="ex. Kamis"
        android:layout_below="@+id/tahun_jadwal"
        android:layout_alignLeft="@+id/tahun_jadwal"
        android:layout_alignStart="@+id/tahun_jadwal"
        android:layout_alignRight="@+id/tahun_jadwal"
        android:layout_alignEnd="@+id/tahun_jadwal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bulan_jadwal"
        android:hint="ex. Maret"
        android:layout_below="@+id/waktu_jadwal"
        android:layout_alignLeft="@+id/waktu_jadwal"
        android:layout_alignStart="@+id/waktu_jadwal"
        android:layout_toLeftOf="@+id/submit_jadwal"
        android:layout_toStartOf="@+id/submit_jadwal" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah"
        android:id="@+id/submit_jadwal"
        android:layout_above="@+id/batal_jadwal"
        android:layout_alignLeft="@+id/batal_jadwal"
        android:layout_alignStart="@+id/batal_jadwal"
        android:layout_alignRight="@+id/batal_jadwal"
        android:layout_alignEnd="@+id/batal_jadwal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/batal_jadwal"
        android:layout_above="@+id/lihatjadwal_jadwal"
        android:layout_alignLeft="@+id/lihatjadwal_jadwal"
        android:layout_alignStart="@+id/lihatjadwal_jadwal"
        android:layout_alignRight="@+id/lihatjadwal_jadwal"
        android:layout_alignEnd="@+id/lihatjadwal_jadwal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lihat Jadwal"
        android:id="@+id/lihatjadwal_jadwal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/kegiatan_jadwal"
        android:gravity="left"
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:maxLines="4"
        android:lines="4"
        android:layout_below="@+id/batal_jadwal"
        android:layout_alignLeft="@+id/hari_jadwal"
        android:layout_alignStart="@+id/hari_jadwal"
        android:layout_alignRight="@+id/hari_jadwal"
        android:layout_alignEnd="@+id/hari_jadwal"
        android:layout_alignBottom="@+id/lihatjadwal_jadwal"></EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tahun"
        android:id="@+id/textView"
        android:layout_below="@+id/bulan_jadwal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tahun_jadwal"
        android:hint="ex. 2016"
        android:layout_below="@+id/bulan_jadwal"
        android:layout_alignLeft="@+id/bulan_jadwal"
        android:layout_alignStart="@+id/bulan_jadwal"
        android:layout_toLeftOf="@+id/submit_jadwal"
        android:layout_toStartOf="@+id/submit_jadwal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Kegiatan"
        android:id="@+id/textView3"
        android:layout_below="@+id/hari_jadwal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
